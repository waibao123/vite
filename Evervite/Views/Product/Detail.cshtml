@{
    ViewBag.Title = "澳乐维他";
    Layout = "~/Views/Shared/MainSiteLayout.cshtml";
    @Styles.Render("~/Content/css/productDetail.css");
    @Styles.Render("~/Content/css/owl.carousel.css");
    @Styles.Render("~/Content/css/owl.theme.css");

    <script src="~/Content/js/productDetail.js"></script>
}

<div class="container">

    <div class="container-inner">

        <div class="row">
            <div class="col-sm-5 center-block text-center">

                <article class="recommend-list">

                    <div>
                        <img class="recommend-product thumb-pic" src="~/Content/ProductImage/@ViewBag.Product.GalleryImages[0]">
                    </div>

                    <div class="snap-list-wrapper">

                        <section id="snapList">

                            @foreach (string imgPath in ViewBag.Product.GalleryImages)
                            {
                                <div class="snap-list-outer">
                                    <div class="snap-list-inner">
                                        <a href="javascript:void(0);">
                                            <img class="recommend-product" src="~/Content/ProductImage/@imgPath">
                                        </a>
                                    </div>
                                </div>
                            }

                        </section>

                    </div>
                </article>

            </div>
            <div class="col-sm-7 center-block">
                <h3>@ViewBag.Product.Title</h3>
                <h4 class="mt30">@ViewBag.Product.SubTitle</h4>
                <p class="mt20" style="display:none">
                    <span class="price"></span>
                    <span><a href="@ViewBag.Product.PurchaseUrl"><img class="purchase-btn" src="~/Content/images/buy-btn.png"></a></span>
                </p>
                <div class="border-line"></div>
                <div class="row product-introduce">
                    <div class="col-sm-7 center-block">
                        @for (int i = 0; i * 2 < ViewBag.ProductAttr.Count; i++)
                        {
                            <h4>@ViewBag.ProductAttr[i * 2].AttrName：@ViewBag.ProductAttr[i * 2].AttrValue</h4>
                        }
                    </div>

                    <div class="col-sm-5 center-block">
                        @for (int i = 0; i * 2 + 1 < ViewBag.ProductAttr.Count; i++)
                        {
                            <h4>@ViewBag.ProductAttr[i * 2 + 1].AttrName：@ViewBag.ProductAttr[i * 2 + 1].AttrValue</h4>
                        }
                    </div>

                </div>
            </div>
        </div>

    </div>

</div>

<div class="container">

    <div class="product-detail">

        <div class="row">

            <div class="col-sm-3 center-block">
                <p>
                    <span class="pre-star"><img src="~/Content/images/star.png"></span>
                    <span class="product-title-name">明星产品</span>
                </p>

                <article class="recommend-list">

                    <div class="snap-list-wrapper">

                        <ul>
                            @foreach (var p in ViewBag.RecommandList)
                            {
                                <li class="snap-list-outer">
                                    <div class="snap-list-inner">
                                        <a target="_blank" href="/Product/Detail?ws=@ViewBag.WebsiteId&id=@p.Id">
                                            <img class="recommend-product center-block" src="~/Content/ProductImage/@p.GalleryImages[0]">
                                            <div>
                                                <h3>@p.Name</h3>
                                                <p>@p.Title</p>
                                            </div>
                                        </a>
                                    </div>
                                </li>
                            }
                        </ul>

                    </div>
                </article>

            </div>
            <div class="col-sm-9 center-block text-center">
                @foreach (string imgPath in ViewBag.Product.ContentImages)
                {
                    <img src="~/Content/ProductImage/@imgPath" />
                }
            </div>

        </div>

    </div>

</div>
