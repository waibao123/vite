@{
    ViewBag.Title = "澳乐维他";
    Layout = "~/Views/Shared/MainSiteLayout.cshtml";
    @Styles.Render("~/Content/css/index.css");
    @Styles.Render("~/Content/css/owl.carousel.css");
    @Styles.Render("~/Content/css/owl.theme.css");

    <script src="~/Content/js/mainSite.js"></script>
}


<div id="myCarousel" class="carousel slide">
    <!-- 轮播（Carousel）指标 -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <!-- 轮播（Carousel）项目 -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/banner/aoleweita-banner-1.jpg" alt="澳乐维他">
        </div>
        <div class="item">
            <img src="~/Content/banner/aoleweita-banner-2.jpg" alt="澳乐维他">
        </div>
        <div class="item">
            <img src="~/Content/banner/aoleweita-banner-3.jpg" alt="澳乐维他">
        </div>
        <div class="item">
            <img src="~/Content/banner/aoleweita-banner-4.jpg" alt="澳乐维他">
        </div>
    </div>

</div>

<div class="container">

    <div class="inner-content">

        <div class="search-outer">

            <div class="row text-center">

                <form class="search-wrapper" method="get" target="_blank" action="/Product/Search">
                    <input name="kw" type="text" class="form-control" placeholder="请输入您要搜索的商品">
                    <input name="ws" type="text" value="@ViewBag.WebsiteId" hidden="hidden">
                    <input type="submit" value="" class="search-btn">
                </form>

            </div>

        </div>

        <div class="product-category-wrapper">
            <h3 class="text-center">产品分类</h3>
        </div>

        <ul class="row text-center shortcut-button-list">
            @foreach (var ct in ViewBag.CategoryList)
            {
                <li>
                    <a href="../Product/List?ws=@ViewBag.WebsiteId&ct=@ct.Id" class="btn btn-default btn-lg" role="button">@ct.CategoryName</a>
                </li>
            }
        </ul>

        <div class="row company-introduce-wrapper">
            <div class="col-sm-7 center-block company-introduce">
                <p>
                    EnerVite品牌创建于1983年，隶属于Health Spring Australia Pty Ltd。通过30多年的沉淀与历练，已成为澳洲人喜爱与信任的保健品牌之一。
                </p>
                <p>
                    澳乐维他的高品质源于澳洲是一个注重环保的国家，且其丰富的生物种类给生物制药业提供了充足且优质的原材料，澳乐维他经过科学的优选，从而确保选取的原材料均为天然，没有任何污染。
                </p>
                <p>
                    澳大利亚是世界上对保健品管制最为严格的国家，澳洲联邦药物管理局（TGA）率先把保健品与药品实行同源管理，并通过立法进行严格管制。澳乐维他是此高标准的先行者，以此确保其每一款产品都恪守最高的生产标准及最优品质。
                </p>
            </div>
            <div class="col-sm-5 center-block text-center">
                <video id="aoleweitaPlay1" width="100%" height="100%" poster="~/Content/images/video_enervite_1.jpg" controls="">
                    <source src="/Content/video/movie.mp4" type="video/mp4">
                    <object data="/Content/video/movie.mp4" width="100%" height="100%"></object>
                    Your browser does not support the video tag.
                </video>
            </div>
        </div>

        <div class="product-category-wrapper">
            <h3 class="text-center">明星产品</h3>
        </div>

        <article class="recommend-list">

            <div class="snap-list-wrapper">
                <section id="snapList">
                    @foreach (var p in ViewBag.ProductList)
                    {
                        <div class="snap-list-outer">
                            <div class="snap-list-inner">
                                <a target="_blank" href="/Product/Detail?ws=@ViewBag.WebsiteId&id=@p.Id">
                                    <img class="recommend-product" src="~/Content/ProductImage/@p.GalleryImages[0]">
                                    <div>
                                        <h3>@p.Name</h3>
                                        @*<p>@p.Title</p>*@
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                </section>

            </div>
        </article>

        <div class="product-category-wrapper">
            <h3 class="text-center">关于我们</h3>
        </div>

        <div class="row about-us">
            <div class="col-sm-4">
                <a href="/Product/List?ws=1">
                    <img src="~/Content/images/product_series.jpg" />
                    <div>
                        <h3>产品系列</h3>
                    </div>
                </a>
            </div>

            <div class="col-sm-4">
                <a href="/Index/Advantage?p=0">
                    <img src="~/Content/images/brand_event.jpg" />
                    <div>
                        <h3>品牌事件</h3>
                    </div>
                </a>
            </div>

            <div class="col-sm-4">
                <a href="/Index/Advantage?p=6">
                    <img src="~/Content/images/produce_control.jpg" />
                    <div><h3>生产质控</h3></div>
                </a>
            </div>
        </div>

    </div>

</div>
